    if numbers == [1, 2, 3, 4]:
        print(f"âœ… List append: {numbers}")
    else:
        print(f"âŒ List append failed: {numbers}")
        return False

    # Test dictionary operations
    person = {"name": "Alice", "age": 30}
    person["city"] = "New York"

    if person["name"] == "Alice" and person["city"] == "New York":
        print(f"âœ… Dictionary operations: {person}")
    else:
        print(f"âŒ Dictionary operations failed: {person}")
        return False

    return True

